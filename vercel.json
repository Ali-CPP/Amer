{
  "version": 2,
  "name": "construction-safety-survey",
  "builds": [
    {
      "src": "frontend/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/*.js",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/frontend/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
